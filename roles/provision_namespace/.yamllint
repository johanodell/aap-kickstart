---
###############################################################################
# YAML Lint Configuration for provision_namespace Role
###############################################################################

extends: default

rules:
  line-length:
    max: 120
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: {}
  document-start: enable
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
  braces:
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1

ignore: |
  .cache/
  tests/output/
